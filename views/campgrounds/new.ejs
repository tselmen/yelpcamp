<% layout('layouts/boilerplate') %>
<!--suppress HtmlUnknownTarget -->
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="needs-validation">
            <div>
                <label for="title" class="form-label">Title: </label>
                <input type="text" name="campground[title]" id="title" class="form-control" required>
            </div>
            <div>
                <label for="location" class="form-label">Location: </label>
                <input type="text" name="campground[location]" id="location" class="form-control" required>
            </div>
            <div>
                <label for="image">Image URL: </label>
                <input type="text" name="campground[image]" id="image" class="form-control" required>
            </div>
            <label for="price" class="form-label">Price: </label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" id="price"
                       name="campground[price]" required>
            </div>
            <div>
                <label for="description">Description: </label>
                <textarea name="campground[description]" id="description" class="form-control" required></textarea>
            </div>
            <button class="btn btn-primary my-3">Add campground</button>
        </form>
        <a href="/campgrounds">Go back</a>
    </div>
</div>
